# ============================================
# AI Trading Analyzer Configuration
# ============================================

# Telegram Bot Configuration
BOT_TOKEN=

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# TradingView Configuration
TRADINGVIEW_USERNAME=your_tradingview_username
TRADINGVIEW_PASSWORD=your_tradingview_password
TRADINGVIEW_BASE_URL=https://www.tradingview.com

# Trading Pairs (comma-separated)
TRADING_PAIRS=XAUUSD,EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD,NZDUSD,USDCHF

# Strategies to Run (comma-separated: swing,scalping)
ACTIVE_STRATEGIES=swing,scalping

# Swing Strategy Settings
SWING_DAILY_TIMEFRAME=1D
SWING_ENTRY_TIMEFRAME=30
SWING_CONFIDENCE_THRESHOLD=0.75

# Scalping Strategy Settings
SCALPING_PRIMARY_TIMEFRAME=15
SCALPING_ENTRY_TIMEFRAME=5
SCALPING_CONFIDENCE_THRESHOLD=0.80

# Chart Screenshot Settings
CHART_WIDTH=1920
CHART_HEIGHT=1080
CHART_LOAD_WAIT=5000
SCREENSHOT_QUALITY=95

# Output Directories
OUTPUT_DIR=./output
LOGS_DIR=./logs
REPORTS_DIR=./reports

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=2000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Puppeteer Settings
HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Zone Drawing Colors
BUY_ZONE_COLOR=#0066FF
SELL_ZONE_COLOR=#FF0033
ZONE_OPACITY=0.3
ZONE_BORDER_WIDTH=2

# Analysis Settings
ENABLE_LOCAL_FALLBACK=true
SAVE_RAW_SCREENSHOTS=true
VALIDATE_ZONES=true
AUTO_RECOVERY=true
